<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %>:</span>
  <span class="car" style="font-weight:bold"><%= comment.car.carname %></span>
  <span class="content"><%= comment.content %><br>
  <% if comment.subjects_value != nil %>
  Subjects: <%= comment.subjects_value %>
  <% end %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
  </span>
</li>
