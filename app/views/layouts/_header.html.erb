<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "汽车在线论坛", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "首页", root_path %></li>
        <li><%= link_to "帮助", help_path %></li>
        <li><%= link_to "车评", comments_path %></li>
        <li><%= link_to "汽车", cars_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              账户 <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "个人资料", current_user %></li>
              <li><%= link_to "更新设置", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "所有用户", users_path %></li>
              <li><%= link_to "添加汽车", new_car_path %></li>
              <li class="divider"></li>
              <% if current_user.admin? %>
              <li><%= link_to "后台管理", rails_admin_path %>
              <% end %>
              <li><%= link_to "登出", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "登录", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
