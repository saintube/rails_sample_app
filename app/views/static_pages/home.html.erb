<% if false %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="comment_form">
        <%= render 'shared/comment_form' %>
      </section>
    </aside>
  </div>
<% else %>

<div class="center jumbotron">
  <h1>汽车在线论坛</h1>

  <h2>
    欢迎使用汽车在线论坛，本论坛基于
    <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
    开发。
  </h2>
  <% if not logged_in? %>
    <%= link_to "立即注册", signup_path, class: "btn btn-lg btn-primary" %>
  <% else %>
    <%= link_to "浏览车评", comments_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>

